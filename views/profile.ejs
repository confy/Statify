<section class="section-container text-center">

    <div style="margin-left: calc(50vw - 260.5px)">
        <br>
        <table>
            <tr>
                <th>
                    <div class="container">
                        <div class="profilepagebodyimg container">
                            <!-- If the user has a profile picture display it -->
                            <% if (typeof user.profilePic != 'undefined') { %>
                                <img src="<%=user.profilePic.value%>" alt="<%=user.name%>">

                                <!-- Otherwise display a placeholder image. -->
                                <% } else { %>
                                    <img src="images/placeholder_pic.png" alt="<%=user.name%>">
                                    <% } %>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="profilepagebodytext container">
                        <h1>
                            <%=user.name%>
                        </h1>
                        <p class="text-muted">
                            <%=user.id%>
                        </p>
                        <p class="text-muted">
                            <%= user.followers %> followers
                        </p>
                        <p class="text-muted">
                            <%=user.country%>
                        </p>
                        <a href="<%=user.profileUrl%>">Link to Profile</a>
                    </div>
                </th>
        </table>
    </div>
    </div>
    </div>
</section>

