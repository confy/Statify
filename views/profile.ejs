<div style="margin-left: calc(50vw - 223.5px)">
    <br>
    <table>
        <tr>
            <th>
                <div class="container">
                    <div class="profilepagebodyimg">
                        <!-- If the user has a profile picture display it -->
                        <% if (user.profilePic) { %>
                            <img src="<%=user.profilePic.value%>" alt="<%=user.name%>">
                            
                        <!-- Otherwise display a placeholder image. -->
                        <% } else { %>
                            <img src="images/placeholder_pic.png" alt="<%=user.name%>">
                        <% } %>
                    </div>
            </th>
            <th>
                <div class="profilepagebodytext container">
                    <h1>Profile</h1>
                    <p>Name: <%=user.name%></p>
                    <p>Id: <%=user.id%></p>
                    <p><%= user.followers %> followers</p>
                    <p>Country: <%=user.country%></p>
                    <a href="<%=user.profileUrl%>">Link to Profile</a>
                </div>
            </th>
        </div>
    </table>
</div>